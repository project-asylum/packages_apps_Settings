<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="button_settings"
    android:title="@string/button_settings_title">

    <asylum.preference.SettingSwitchPreference
        android:key="disable_hw_keys"
        android:title="@string/navigation_bar_title"
        android:summary="@string/navigation_bar_title_summary"
        settings:settingType="system"
        settings:hidePreferenceInt="@*android:integer/config_deviceHardwareKeys" />
    
    <asylum.preference.SettingSwitchPreference
        android:key="navigation_bar_enabled"
        android:title="@string/navigation_bar_title"
        android:summary="@string/navigation_bar_title_summary"
        settings:settingType="aospSystem"
        settings:hidePreferenceInt="@*android:integer/config_deviceHardwareKeys" />

    <asylum.preference.SettingSwitchPreference
        android:key="button_brightness_enabled"
        android:title="@string/hardware_brightness_keys_title"
        android:summary="@string/hardware_brightness_keys_title_summary"
        settings:settingType="aospSystem"
        settings:hidePreferenceInt="@*android:integer/config_deviceHardwareKeys" />

</PreferenceScreen>
